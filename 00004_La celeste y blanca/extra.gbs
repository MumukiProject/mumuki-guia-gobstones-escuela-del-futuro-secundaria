procedure Bordar(color) {
	repeat(5) {
		Poner(color)
	}
}

function hiloAmarillo() {
	return (Rojo)
}

function hiloCeleste() {
	return (Azul)
}

function hiloNegro() {
	return (Negro)
}

procedure BordarSol {
	Bordar(hiloNegro())
	Bordar(hiloAmarillo())
}

procedure BordarFranja() {
  while(puedeMover(Este)) {
    Bordar(hiloCeleste())
    Mover(Este)
  }
  Bordar(hiloCeleste())
}
